<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.ecommerce_backend.mapper.ProductMapper" >


    <resultMap type="com.example.ecommerce_backend.models.Product" id="productMap">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="desc" column="desc"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="imgUrl" column="img_url"/>

        <collection property="color" ofType="java.lang.String" javaType="list">
            <result column="color"/>
        </collection>

        <collection property="size" ofType="java.lang.String" javaType="list">
            <result column="size"/>
        </collection>

    </resultMap>

    <select id="getAllProducts" resultType="com.example.ecommerce_backend.models.Product">
        SELECT * FROM size
        INNER JOIN product_size on size.id = product_size.sid
        INNER JOIN product on product_size.pid = product.id
        INNER JOIN product_color ON product.id = product_color.pid
        INNER JOIN color ON product_color.cid = color.id;
    </select>
</mapper>



